{
  "root": true,
  "env": {
    "node": true
  },
  "extends": ["plugin:vue/essential", "plugin:prettier/recommended", "@vue/airbnb", "@vue/typescript/recommended"],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "@typescript-eslint/interface-name-prefix": "off",
    "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 0, "maxBOF": 0 }],
    "import/prefer-default-export": "off",
    "class-methods-use-this": 0,
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/*.test.ts", "**/*.stories.ts"]}],
    "no-underscore-dangle": [
      "error",
      {
        "allow": ["_id"]
      }
    ],
    "max-len": [
      "error",
      {
        "code": 120
      }
    ],
    "eol-last": ["error", "always"],
    "object-curly-spacing": ["error", "always"],
    "operator-linebreak": ["error", "before", { "overrides": { "=": "after" } }],
    "object-curly-newline": [
      "error",
      {
        "ObjectExpression": { "multiline": true, "minProperties": 0 },
        "ObjectPattern": { "multiline": true },
        "ImportDeclaration": { "multiline": true }
        // "ExportDeclaration": { "multiline": true, "minProperties": 3 }
      }
    ]
  },
  "overrides": [
    {
      "files": ["**/__tests__/*.{j,t}s?(x)", "**/tests/unit/**/*.spec.{j,t}s?(x)"],
      "env": {
        "jest": true
      }
    }
  ]
}
